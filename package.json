    "node": ">=18"
  },
  "dependencies": {
    "acorn": "^8.14.0",
    "acorn-walk": "^8.3.4",
    "axios": "^1.7.9",
    "bootstrap": "^5.3.3",
    "ethers": "^6.13.5",
    "ts-node": "^10.9.2",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@metamask/providers": "^20.0.0",
    "@types/axios": "^0.9.36",
    "@types/node": "^22.13.1",
    "@types/ws": "^8.5.14",
    "ajv": "^8.17.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
