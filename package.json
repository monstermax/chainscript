{
  "name": "chainscript",
  "version": "1.0.0",
  "scripts": {
    "backend": "npm -w @chainscript/backend run start",
    "frontend": "npm -w @chainscript/www run dev ",
    "frontend:build": "npm -w @chainscript/www run build",
    "frontend:clean": "npm -w @chainscript/www run clean",
    "mobile": "cd mobile; react-native start",
